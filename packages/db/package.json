{
  "name": "@prepi/db",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "with-env": "dotenv -e ../../.env --",
    "clean": "rm -rf .turbo node_modules",
    "dev": "pnpm with-env pnpm prisma studio --port 5556 --browser none",
    "db:generate": "pnpm with-env prisma generate",
    "db:push": "pnpm with-env prisma db push --skip-generate",
    "db:deploy": "pnpm with-env prisma migrate deploy",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "db:seed": "pnpm with-env ts-node --project ./ts-node-config.json ./seed.ts",
    "db:reset": "pnpm with-env prisma migrate reset --force && pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0"
  },
  "devDependencies": {
    "@prepi/eslint-config": "workspace:*",
    "@prepi/typescript-config": "workspace:*",
    "dotenv-cli": "^6.0.0",
    "prisma": "^5.20.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.9.3"
  }
}
